{
  "name": "easy-commit",
  "version": "1.1.0",
  "description": "Create conventional commits with an interactive TUI",
  "type": "module",
  "bin": {
    "easy-commit": "./dist/index.js"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "build:standalone": "bun run scripts/build.ts",
    "build:quick": "bun build src/index.ts --compile --outfile easy-commit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules easy-commit",
    "ci:publish": "changeset tag"
  },
  "keywords": [
    "git",
    "commit",
    "conventional-commits",
    "cli",
    "tui"
  ],
  "author": "Hector",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@changesets/cli": "^2.29.8",
    "@types/bun": "latest",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "ink-testing-library": "^4.0.0",
    "react-devtools-core": "^7.0.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "ink": "^6.6.0",
    "ink-box": "^2.0.0",
    "ink-select-input": "^6.2.0",
    "ink-text-input": "^6.0.0",
    "js-yaml": "^4.1.1",
    "react": "^19.2.3",
    "zod": "^4.3.6"
  }
}
